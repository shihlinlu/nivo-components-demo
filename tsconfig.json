{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "sourceMap": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "pages/*": ["pages/*"],
      "src/*": ["*"]
    },
    "lib": ["es2017", "es2018", "dom"],
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
